html, body
{
	height: 95%;
	overflow: visible;
}

body
{
	background-color: #000;
	color: #fff;
	font-family: Verdana, Tahoma, Arial, "Helvetica Neue", Helvetica, Sans-Serif;
	font-size: 12px;
}

#header
{
}

#header a
{
	color: #fff;
}

#container
{
	height: 100%;
}

#snaglToolbar
{
	width: 457px; /* This unintentionally controls where the slider is on the Web API page */
}

#addEdgeDialog, #addNodeDialog, #removeEdgeDialog, #removeNodeDialog, #searchDialog
{
	display: none;
	position: relative;
}

#silverlightControlHost
{
	height: 100%;
	text-align: center;
}

h1
{
	color: #fff;
	font-size: 1.75em;
}

h2
{
	color: #fff;
	font-size: 1.5em;
}

a, a:link, a:visited, a:hover, a:active
{
	text-decoration: underline;
}

a, a:link, a:visited, a:active
{
	color: #6490bb;
}

a:hover
{
	color: #0077bb;
}

img
{
	border: 0px;
}

/* Styles for basic forms
-----------------------------------------------------------*/

fieldset 
{
	border:1px solid #ddd;
	padding:0 1.4em 1.4em 1.4em;
	margin:0 0 1.5em 0;
}

legend 
{
	font-size:1.2em;
	font-weight: bold;
}

textarea 
{
	min-height: 75px;
}

.editor-label 
{
	margin: 1em 0 0 0;
}

.editor-field 
{
	margin:0.5em 0 0 0;
}


/* Styles for validation helpers
-----------------------------------------------------------*/
.field-validation-error
{
	color: #ff0000;
}

.field-validation-valid
{
	display: none;
}

.input-validation-error
{
	border: 1px solid #ff0000;
	background-color: #ffeeee;
}

.validation-summary-errors
{
	font-weight: bold;
	color: #ff0000;
}

.validation-summary-valid
{
	display: none;
}

#projectList thead tr
{
	background-color: #444;
	color: #fff;
	font-weight: bold;
}

.gvRow
{
	background: none repeat scroll 0 0 #111;
	color: #eee;
}

.gvRow.alternate
{
	background: none repeat scroll 0 0 #222;
}

#footer
{
	background-image: url('/Content/Image/FooterBackground.png');
	background-repeat: repeat-x;
	border: solid 1px black;
	border-radius: 0px 0px 10px 10px;
	height: 35px;
	width: 500px;
}

#footer img
{
	margin: 12px 12px 0px 6px;
}

#footer label
{
	height: 35px;
}

/* Navigation */
#buttons
{
    display: inline-block;
}

#layoutButtons
{
    display: inline-block;
}

#performExportButton, #disablePanMode, #enablePanMode, #CircleLayout, #OriginalTreeLayout, #NetworkLayout, #GridLayout, #performSearchButton
{
    display: inline-block;
	height: 32px;
	width: 32px;
}

#performExportButton
{
	background-image: url('/Content/Image/export.png');
}

#performExportButton:hover
{

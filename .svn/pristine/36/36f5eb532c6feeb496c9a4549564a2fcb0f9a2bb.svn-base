using System.Xml.Serialization;

namespace Berico.SnagL.Infrastructure.Configuration
{
    /// <summary>
    /// The extension element
    /// </summary>
    [XmlType(TypeName = "extension")]
    public class Extension
    {
        #region Properties

        /// <summary>
        /// Gets or sets the name
        /// </summary>
        [XmlAttribute(AttributeName = "name")]
        public string Name
        {
            get;
            set;
        }

        /// <summary>
        /// Gets or sets the path
        /// </summary>
        [XmlAttribute(AttributeName = "path")]
        public string Path
        {
            get;
            set;
        }

        #endregion

        #region Constructors

        /// <summary>
        /// Initializes a new instance of the ConfigurationExtension class
        /// </summary>
        public Extension()
        {
        }

        #endregion
    }
}
